<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="5dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ip: "

            />

        <EditText
            android:id="@+id/et_ip"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="192.168.93.162"
            android:hint="输入服务端IP"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Port："/>
        <EditText
            android:id="@+id/et_port"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="8485"
            android:hint="port"
            android:inputType="number"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
       <Button
           android:id="@+id/btn_connect_server"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="连接服务器"/>

        <ImageView
            android:id="@+id/iv_connect_state"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/drawable_connect_state"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置 leapId："/>

        <EditText
            android:id="@+id/et_leapId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:hint="输入客户端 leapId"
            android:inputType="number"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_bind_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="绑定leapId到服务端"/>
        <Button
            android:id="@+id/btn_bind_mesh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定leapId到MeshService"/>

    </LinearLayout>


    <EditText
        android:id="@+id/et_send_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="设置自动化指令发送内容，若为空，则默认发送200字节内容"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#000000"/>

    <TextView
        android:id="@+id/tv_commond"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="收到来至于服务端的指令："/>


</LinearLayout>